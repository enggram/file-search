{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('bundles/app/css/bootstrap.min.css')}}" rel="stylesheet" >
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('bundles/app/js/jquery.min.js')}}"></script>
    <script src="{{ asset('bundles/app/js/bootstrap.min.js')}}"></script>
    <script src="{{ asset('bundles/app/js/typeahead.js')}}"></script>
    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>
{% endblock %}

{% block body %}
    <div class="row" style="margin-top: 100px;">
        <div class="col-md-12">
            <form name="search" action="{{ path("search_keyword") }}" method="post">
                <div class="form-group">
                    <label for="searchInput">Search Keyword</label>
                    <input type="text" class="form-control" autocomplete="off" name="search_keyword" id="searchInput" placeholder="Keyword">
                </div>
                <button type="submit" name="submit" class="btn btn-default">Submit</button>
            </form>
        </div>
    </div>
    {% if resultArray | length > 0 %}
        <div class="row" style="margin-top: 10px;">
            <div class="col-md-12">
                <h2>Results</h2>
                    {% for results in resultArray %}
                        <div>
                            {{ results.keyword }} - {{ results.filename }}
                        </div>
                    {% endfor %}
            </div>
        </div>
    {% endif %}

{% endblock %}

{% block footer %}
    <script src="{{ asset('bundles/app/js/search.js')}}"></script>
{% endblock %}